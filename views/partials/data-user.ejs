<!-- DataTables Example -->
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Bảng thống kê khách hàng</div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên</th>
                        <th>Tên đăng nhập</th>
                        <th>Email</th>
                        <th>Số điện thoại</th>
                        <th>Tiền đã mua</th>
                        <th>Ngày tạo</th>
                    </tr>
                </thead>

                <tbody>
                    
                    <% for( user of users ) {%>
                    <tr>
                        <%- listUser(user) %>
                    </tr>
                    <% } %>
                    
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Đã cập nhật dữ liệu vào lúc 11:59 PM</div>
</div>