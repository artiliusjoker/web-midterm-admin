<link rel="stylesheet" href="/css/update.css">
<section class="row">
    <div class="col-sm-12">
        <section class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-block">
                        <h3 class="card-title">Cập nhật người dùng</h3>
                        <form class="form" action="#">
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label">Tên đăng nhập</label>
                                <div class="col-md-9">
                                    <input type="text" name="regular" class="form-control" placeholder="Username...">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label">Mật khẩu</label>
                                <div class="col-md-9">
                                    <input class="form-control" type="password" name="pass" placeholder="Password...">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label">Email</label>
                                <div class="col-md-9">
                                    <input class="form-control" type="text" name="placeholder" placeholder="Email...">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label">Địa chỉ</label>
                                <div class="col-md-9">
                                    <input type="text" name="address" class="form-control" placeholder="Địa chỉ...">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label">Nghề nghiệp</label>
                                <div class="col-md-9">
                                    <input type="text" name="occupation" class="form-control" placeholder="Nghề...">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label">Thông tin người dùng</label>
                                <div class="col-md-9">
                                    <input type="text" name="info" class="form-control"
                                        placeholder="Thông tin thêm..."><span class="help-block">
                                        Thông tin thêm về người dùng</span></div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label">Trang web cá nhân</label>
                                <div class="col-md-9">
                                    <input type="text" name="regular" value="http://" class="form-control"
                                        placeholder="Trang web gì đó...">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label">Giới tính</label>
                                <div class="col-md-9">
                                    <select class="custom-select form-control">
                                        <option selected>Không đề cập</option>
                                        <option value="1">Nam</option>
                                        <option value="2">Nữ</option>
                                        <option value="3">Khác</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label">Chưa biết nhập gì</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control is-valid" id="inputHorizontalSuccess">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label">Chưa biết nhập gì</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control is-invalid" id="inputHorizontalDnger">
                                    <div class="invalid-feedback">Thông tin user bị trùng, thay đổi username khác !
                                    </div>
                                    <small class="form-text text-muted">Form đơn giản thay đổi thông tin người
                                        dùng</small>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>

<section class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-block">
                <h3 class="card-title">Cấp quyền &amp; Xóa tài khoản</h3>
                <div class="row">
                    <div class="col-lg-6 mb-sm-4 mb-lg-0">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="customCheck1">
                            <label class="custom-control-label custom-control-description" for="customCheck1">Cho người
                                dùng quyền admin</label>
                        </div>
                        <br />
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="customCheck2">
                            <label class="custom-control-label custom-control-description" for="customCheck2">Thêm vào
                                $5000 cho người dùng</label>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="custom-control custom-radio">
                            <input type="radio" id="customRadio1" name="customRadio" class="custom-control-input">
                            <label class="custom-control-label custom-control-description"
                                for="customRadio1">Xóa luôn người dùng</label>
                        </div>
                        <br />
                        <div class="custom-control custom-radio">
                            <input type="radio" id="customRadio2" name="customRadio" class="custom-control-input">
                            <label class="custom-control-label custom-control-description" for="customRadio2">Thay đổi
                                thông tin thôi</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-block">
                <h3 class="card-title">Chưa biết nhập gì</h3>
                <div class="row">
                    <div class="col-lg-6 mb-sm-4 mb-lg-0">
                        <div class="input-group"><span class="input-group-prepend">
                                <button class="btn btn-primary" type="button" title="">Default</button>
                            </span>
                            <input type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="input-group">
                            <input type="text" class="form-control"><span class="input-group-append">
                                <button class="btn btn-primary" type="button" data-original-title=""
                                    title="">Thay đổi</button>
                            </span></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>