<% if (detail != 'null') { %>
<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-sm-10">
            <h2>Khách hàng : <%= detail.username %></h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <!--left col-->


            <div class="text-center">
                <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail"
                    alt="avatar">
                <h6>Hình đại diện</h6>
                <input type="file" class="text-center center-block file-upload">
            </div>
            </hr><br>

        </div>
        <!--/col-3-->
        <div class="col-sm-9">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#home">Thông tin</a>&nbsp/&nbsp</li>
                <li><a data-toggle="tab" href="#messages"> Sửa trạng thái</a></li>
            </ul>


            <div class="tab-content mt-3">
                <div class="tab-pane active" id="home">

                    <form class="form" action="##" method="post" id="registrationForm">
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="username">
                                    <h4>Tên đăng nhập</h4>
                                </label>
                                <input type="text" class="form-control" name="username" id="user_name"
                                    title="Tên đăng nhập" value="<%= detail.username %>">
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="fullname">
                                    <h4>Họ tên</h4>
                                </label>
                                <input type="text" class="form-control" name="fullname" id="full_name"
                                    title="Tên khách hàng" value="<%= detail.fullname %>">
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="phone">
                                    <h4>Điện thoại</h4>
                                </label>
                                <input type="text" class="form-control" name="phone" id="phone" title="Số điện thoại"
                                    value=" <%= detail.phone %> ">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="email">
                                    <h4>Địa chỉ email</h4>
                                </label>
                                <input value="<%= detail.email %>" type="email" class="form-control" name="email" id="email" title="Địa chỉ email">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="email">
                                    <h4>Địa chỉ</h4>
                                </label>
                                <input value="chưa có" type="text" class="form-control" id="location" title="Địa chỉ khách">
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="password">
                                    <h4>Mật khẩu mới</h4>
                                </label>
                                <input type="password" class="form-control" name="password" id="password"
                                    title="Mật khẩu">
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="password_confirm">
                                    <h4>Xác nhận mật khẩu</h4>
                                </label>
                                <input type="password" class="form-control" name="password_confirm"
                                    id="password_confirm" title="Xác nhận mật khẩu">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                                <br>
                                <button class="btn btn-lg btn-success" type="submit"><i
                                        class="glyphicon glyphicon-ok-sign"></i> Lưu</button>
                                <button class="btn btn-lg btn-info" type="reset"><i
                                        class="glyphicon glyphicon-repeat"></i>
                                    Làm mới</button>
                            </div>
                        </div>
                    </form>

                </div>
                <div class="tab-pane" id="messages">

                    <h2></h2>
                    <form class="form" action="##" method="post" id="registrationForm">
                        <div class="form-group row mb-0">
                            <label class="col-md-3">
                                <h4>Sửa trạng thái</h4>
                            </label>
                            <div class="col-md-9">
                                <select id="select-status" class="custom-select form-control">
                                    <option class="text-success" value="active" <%if (detail.status == 'active' ) {%>  <%- 'selected' %>  <%}%> >Hoạt động (active)</option>
                                    <option class="text-danger" value="banned" <%if (detail.status == 'banned' ) {%>  <%- 'selected' %>  <%}%> >Khoá (banned)</option>
                                    <option class="text-warning" value="inactive"<%if (detail.status == 'inactive' ) {%>  <%- 'selected' %>  <%}%> >Buộc xác nhận lại (inactive)</option>
                                    <option class="text-muted" value="" <%if (detail.status == 'deleted' ) {%>  <%- 'selected' %>  <%}%> >Đã bị xoá (deleted)</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-12">
                                <br>
                                <button class="btn btn-lg btn-success" type="submit"><i
                                        class="glyphicon glyphicon-ok-sign"></i> Lưu</button>
                                <button class="btn btn-lg btn-info" type="reset"><i
                                        class="glyphicon glyphicon-repeat"></i>
                                    Làm mới</button>
                                <button class="btn btn-lg btn-danger" type="submit">
                                    Xoá</button>
                            </div>
                        </div>
                    </form>

                </div>
                <!--/tab-pane-->
            </div>
            <!--/tab-pane-->
        </div>
        <!--/tab-content-->

    </div>
    <!--/col-9-->
</div>
<!--/row-->
<% } else{ %>  
    <% include ../404 %>
<% } %>