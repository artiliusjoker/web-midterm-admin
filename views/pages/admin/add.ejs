<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-sm-10">
            <h2>Thêm khách hàng</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <!--left col-->


            <div class="text-center">
                <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail"
                    alt="avatar">
                <h6>Hình đại diện</h6>
                <input type="file" class="text-center center-block file-upload">
            </div>
            </hr><br>

        </div>
        <!--/col-3-->
        <div class="col-sm-9">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#home">Thêm mới</a></li>
            </ul>


            <div class="tab-content mt-3">
                <div class="tab-pane active" id="home">

                    <form class="form" action="#" method="POST" id="registrationForm">

                        <div class="form-group row">
                            <div class="col-md-3">
                                <label for="username">
                                    <h4>Tên đăng nhập</h4>
                                </label>
                            </div>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="username" id="user_name"
                                    title="Tên đăng nhập" placeholder="Nhập tên đăng nhập">
                            </div>
                        </div>

                        <div class="form-group row">

                            <div class="col-md-3">
                                <label for="fullname">
                                    <h4>Họ tên</h4>
                                </label>
                            </div>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="fullname" id="full_name"
                                    title="Tên khách hàng" placeholder="Nhập họ tên">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3">
                                <label for="dob">
                                    <h4>Ngày sinh</h4>
                                </label>
                            </div>
                            <div class="col-md-9">
                                <input name="dob" type="date" class="form-control" id="dob" value="">
                            </div>
                        </div>

                        <div class="form-group row">

                            <div class="col-md-3">
                                <label for="phone">
                                    <h4>Điện thoại</h4>
                                </label>
                            </div>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="phone" id="phone" title="Số điện thoại"
                                    placeholder="Nhập sô điện thoại">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3">
                                <label for="email">
                                    <h4>Địa chỉ email</h4>
                                </label>
                            </div>
                            <div class="col-md-9">
                                <input type="email" class="form-control" name="email" id="email" title="Địa chỉ email"
                                    placeholder="Nhập email">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3">
                                <label for="email">
                                    <h4>Địa chỉ</h4>
                                </label>
                            </div>
                            <div class="col-md-9">
                                <input name="address" type="text" class="form-control" id="location"
                                    title="Địa chỉ khách" placeholder="Nhập địa chỉ">
                            </div>
                        </div>
                        <div class="form-group row">

                            <div class="col-md-3">
                                <label for="password">
                                    <h4>Mật khẩu mới</h4>
                                </label>
                            </div>
                            <div class="col-md-9">
                                <input type="password" class="form-control" name="password" id="password"
                                    title="Mật khẩu" placeholder="Mật khẩu">
                            </div>
                        </div>
                        <div class="form-group row">

                            <div class="col-md-3">
                                <label for="password_confirm">
                                    <h4>Xác nhận lại</h4>
                                </label>
                            </div>
                            <div class="col-md-9">
                                <input type="password" class="form-control" name="password_confirm"
                                    id="password_confirm" title="Xác nhận mật khẩu" placeholder="Xác nhận mật khẩu">
                            </div>
                        </div>

                        <div class="form-group row mb-0">
                            <label for="status" class="col-md-3">
                                <h4>Trạng thái</h4>
                            </label>
                            <div class="col-md-9">
                                <select name="status" id="select-status" class="custom-select form-control">
                                    <option class="text-success" value="active">Hoạt động (active)</option>
                                    <option class="text-danger" value="blocked">Khoá tài khoản (blocked)</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row mb-0">
                            <label for="status" class="col-md-3">
                                <h4>Vai trò</h4>
                            </label>
                            <div class="col-md-9">
                                <select name="role" id="select-status" class="custom-select form-control">
                                    <option class="text-info" value="monitor">Giám sát</option>
                                    <option class="text-success" value="normal">Quản lý người dùng</option>
                                    <option class="text-primary" value="editor">Quản lý hàng</option>
                                    <option class="text-danger" value="super">Quản trị viên</option>
                                </select>
                            </div>
                        </div>

                        <% include ../../partials/flash %>
                        <div class="form-group">
                            <div class="col-xs-12 text-center">
                                <br>
                                <button class="btn btn-lg btn-success" type="submit"><i
                                        class="glyphicon glyphicon-ok-sign"></i> Lưu</button>
                                <button class="btn btn-lg btn-info" type="reset"><i
                                        class="glyphicon glyphicon-repeat"></i>
                                    Làm mới</button>
                            </div>
                        </div>
                    </form>

                </div>

                <!--/tab-pane-->
            </div>
            <!--/tab-pane-->
        </div>
        <!--/tab-content-->

    </div>
    <!--/col-9-->
</div>
<!--/row-->