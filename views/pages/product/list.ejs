<div class="row">

    <div class="col-lg-8 mx-auto my-4">
        <div class="row justify-content-end">
            <%- viewModel.pageHelper(viewModel.pageOptions) %>
        </div>
        <!-- List group-->
        <ul class="list-group shadow">

            <% for( product of viewModel.products ) {%>
            <li class="list-group-item">
                <!-- Custom content-->
                <div class="media align-items-lg-center flex-column flex-lg-row p-3">
                    <div class="media-body order-2 order-lg-1">
                        <h5 class="mt-0 font-weight-bold mb-2"><%= product.name %></h5>
                        <p class="font-italic text-muted mb-0 small"><%= product.description %></p>
                        <div class="d-flex align-items-center justify-content-between mt-1">
                            <h6 class="font-weight-bold my-2">Gi√° : <%= product.price %> VND</h6>
                        </div>
                    </div><img src="<%- product.imgpath %>" alt="Generic placeholder image" width="200"
                        class="ml-lg-5 order-1 order-lg-2">
                </div>
                <!-- End -->
            </li>
            <% } %>

        </ul>
        <!-- End -->
    </div>
</div>
<link href="/css/css_pages/products.css" rel="stylesheet">